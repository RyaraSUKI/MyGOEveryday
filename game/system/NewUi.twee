:: NewUiScript [script]
$(document).ready(function() {
	$("#opensaves").click(function() {
		UI.saves(), document.querySelector('#drawer').toggle()
	});	
	$("#opensettings").click(function() {
		Engine.play("设置"), document.querySelector('#drawer').toggle()
	});
	$("#jumpdebug").click(function() {
		Engine.play("调试示例"), document.querySelector('#drawer').toggle()
	});
});